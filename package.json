{
  "name": "eyesbound",
  "private": true,
  "description": "Website for Berlin based Photographer",
  "version": "3.0.0",
  "license": "0BSD",
  "author": {
    "name": "Jannis Hell"
  },
  "engines": {
    "node": ">=17"
  },
  "scripts": {
    "build": "gatsby build",
    "clean": "gatsby clean",
    "coverage": "jest --ci --coverage",
    "develop": "gatsby develop -S",
    "format": "npm run xo",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "lint:watch": "npx nodemon -x npm run lint:fix --ext js,jsx,json",
    "serve": "gatsby serve",
    "start": "npm run develop",
    "start:lan": "npm run develop -- -o -H 0.0.0.0 -p 8000",
    "test": "jest",
    "test:update": "jest -u",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@react-google-maps/api": "^2.10.2",
    "classnames": "^2.3.1",
    "gatsby": "^4.14.0",
    "gatsby-plugin-csp": "^1.1.3",
    "gatsby-plugin-emotion": "^7.13.0",
    "gatsby-plugin-gatsby-cloud": "^4.14.0",
    "gatsby-plugin-image": "^2.14.1",
    "gatsby-plugin-manifest": "^4.14.0",
    "gatsby-plugin-offline": "^5.14.0",
    "gatsby-plugin-react-helmet": "^5.14.0",
    "gatsby-plugin-robots-txt": "^1.7.1",
    "gatsby-plugin-sitemap": "^5.14.0",
    "gatsby-source-prismic": "^5.2.6",
    "prop-types": "^15.8.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-helmet": "^6.1.0",
    "react-slideshow-image": "^3.7.5"
  },
  "devDependencies": {
    "babel-jest": "^28.0.3",
    "babel-preset-gatsby": "^2.14.0",
    "dotenv": "^16.0.1",
    "eslint-config-xo": "^0.40.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-jest": "^26.1.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "react-test-renderer": "^18.1.0",
    "xo": "^0.48.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Primajin/eyesbound"
  },
  "xo": {
    "extends": [
      "xo",
      "xo-react"
    ],
    "overrides": [
      {
        "files": "src/**/__tests__/*",
        "plugins": [
          "jest"
        ],
        "extends": [
          "plugin:jest/recommended",
          "plugin:jest/style"
        ]
      }
    ],
    "rules": {
      "node/prefer-global/process": "off",
      "react/function-component-definition": [
        2,
        {
          "namedComponents": "arrow-function"
        }
      ],
      "react/require-default-props": [
        2,
        {
          "forbidDefaultForRequired": true
        }
      ]
    }
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "es6": true,
      "node": true
    }
  },
  "eslintIgnore": [
    "__mocks__",
    "__snapshots__",
    "gatsby-config.js",
    "gatsby-node.js",
    "jest-preprocess.js",
    "jest.config.js",
    "loadershim.js"
  ]
}
