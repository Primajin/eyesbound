{
  "name": "eyesbound",
  "private": true,
  "description": "Website for Berlin based Photographer",
  "version": "3.0.0",
  "license": "0BSD",
  "author": {
    "name": "Jannis Hell"
  },
  "engines": {
    "node": ">=19"
  },
  "scripts": {
    "build": "gatsby build",
    "clean": "gatsby clean",
    "coverage": "jest --ci --coverage",
    "develop": "gatsby clean && gatsby develop -S",
    "format": "npm run xo",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "lint:watch": "npx nodemon -x npm run lint:fix --ext js,jsx,json",
    "serve": "gatsby serve",
    "start": "npm run develop",
    "start:lan": "npm run develop -- -o -H 0.0.0.0 -p 8000",
    "test": "jest",
    "test:update": "jest -u",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@fontsource/montserrat": "^5.0.2",
    "@react-google-maps/api": "^2.18.1",
    "classnames": "^2.3.2",
    "gatsby": "^5.10.0",
    "gatsby-plugin-csp": "^1.1.4",
    "gatsby-plugin-emotion": "^8.10.0",
    "gatsby-plugin-gatsby-cloud": "^5.10.0",
    "gatsby-plugin-image": "^3.10.0",
    "gatsby-plugin-manifest": "^5.10.0",
    "gatsby-plugin-offline": "^6.10.0",
    "gatsby-plugin-react-helmet": "^6.10.0",
    "gatsby-plugin-robots-txt": "^1.8.0",
    "gatsby-plugin-sitemap": "^6.10.0",
    "gatsby-plugin-web-font-loader": "^1.0.4",
    "gatsby-source-prismic": "^5.3.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-slideshow-image": "^4.2.1"
  },
  "devDependencies": {
    "babel-jest": "^29.5.0",
    "dotenv": "^16.1.4",
    "eslint": "^8.42.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-jest": "^27.2.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "react-test-renderer": "^18.2.0",
    "xo": "^0.54.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Primajin/eyesbound"
  },
  "xo": {
    "extends": [
      "xo",
      "xo-react"
    ],
    "overrides": [
      {
        "files": "src/**/__tests__/*",
        "plugins": [
          "jest"
        ],
        "extends": [
          "plugin:jest/recommended",
          "plugin:jest/style"
        ]
      }
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "parent",
            "sibling",
            "index"
          ]
        }
      ],
      "n/prefer-global/process": "off",
      "react/function-component-definition": [
        2,
        {
          "namedComponents": "arrow-function"
        }
      ],
      "react/require-default-props": [
        2,
        {
          "forbidDefaultForRequired": true
        }
      ],
      "react/no-unknown-property": [
        2,
        {
          "ignore": [
            "css",
            "fill"
          ]
        }
      ]
    }
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "es6": true,
      "node": true
    }
  },
  "eslintIgnore": [
    "__mocks__",
    "__snapshots__",
    "gatsby-config.js",
    "gatsby-node.js",
    "jest-preprocess.js",
    "jest.config.js",
    "loadershim.js"
  ]
}
