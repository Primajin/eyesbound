{
  "name": "eyesbound",
  "private": true,
  "description": "Website for Berlin based Photographer",
  "version": "3.0.0",
  "license": "0BSD",
  "author": {
    "name": "Jannis Hell"
  },
  "engines": {
    "node": ">=17"
  },
  "scripts": {
    "prebuild": "xo",
    "build": "gatsby build",
    "clean": "gatsby clean",
    "coverage": "jest --ci --coverage && codecov",
    "develop": "gatsby develop -S",
    "format": "npm run xo",
    "lint": "xo",
    "serve": "gatsby serve",
    "start": "npm run develop",
    "start:lan": "npm run develop -- -o -H 0.0.0.0 -p 8000",
    "test": "jest",
    "test:watch": "jest --watch",
    "xo": "xo --fix",
    "xo:watch": "npx nodemon -x npm run xo --ext js,jsx,json"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@react-google-maps/api": "^2.7.0",
    "classnames": "^2.3.1",
    "gatsby": "^4.4.0",
    "gatsby-plugin-csp": "^1.1.3",
    "gatsby-plugin-emotion": "^7.4.0",
    "gatsby-plugin-gatsby-cloud": "^4.4.0",
    "gatsby-plugin-image": "^2.4.0",
    "gatsby-plugin-manifest": "^4.4.0",
    "gatsby-plugin-offline": "^5.4.0",
    "gatsby-plugin-react-helmet": "^5.4.0",
    "gatsby-plugin-sitemap": "^5.4.0",
    "gatsby-source-prismic": "^5.2.3",
    "prop-types": "^15.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-slideshow-image": "^3.6.0"
  },
  "devDependencies": {
    "babel-jest": "^27.4.5",
    "babel-preset-gatsby": "^2.4.0",
    "codecov": "^3.8.3",
    "dotenv": "^10.0.0",
    "eslint-config-xo": "^0.39.0",
    "eslint-config-xo-react": "^0.25.0",
    "eslint-plugin-jest": "^25.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.6",
    "react-test-renderer": "^17.0.2",
    "xo": "^0.47.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Primajin/eyesbound"
  },
  "xo": {
    "extends": [
      "xo",
      "xo-react"
    ],
    "overrides": [
      {
        "files": "src/**/__tests__/*",
        "plugins": [
          "jest"
        ],
        "extends": [
          "plugin:jest/recommended",
          "plugin:jest/style"
        ]
      }
    ],
    "rules": {
      "node/prefer-global/process": "off",
      "react/require-default-props": [
        2,
        {
          "forbidDefaultForRequired": true
        }
      ]
    }
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "es6": true,
      "node": true
    }
  },
  "eslintIgnore": [
    "__mocks__",
    "__snapshots__",
    "gatsby-config.js",
    "gatsby-node.js",
    "jest-preprocess.js",
    "jest.config.js",
    "loadershim.js"
  ]
}
